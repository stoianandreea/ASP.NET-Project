@model SkinCareShop.Models.ManufacturerAddressViewModel

@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Manufacturer")) {
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("Name", "Manufacturer Name:")
    <br />
    @Html.EditorFor(b => b.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("PhoneNumber", "PhoneNumber:")
    <br />
    @Html.Editor("PhoneNumber", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.PhoneNumber, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("Email", "Email:")
    <br />
    @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Email, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("Country", "Country:")
    <br />
    @Html.Editor("Country", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Country, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("City", "City:")
    <br />
    @Html.Editor("City", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.City, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("StreetNumber", "Street and Number:")
    <br />
    @Html.Editor("StreetNumber", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.StreetNumber, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}