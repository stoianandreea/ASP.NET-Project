@model SkinCareShop.Models.Address

@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Address")) {
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(b => b.AdressId)
    <br />

    <br />
    @Html.Label("Country", "Country:")
    <br />
    @Html.Editor("Country", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Country, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("City", "City:")
    <br />
    @Html.Editor("City", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.City, "", new { @class = "text-danger" })
    <br />

    <br />
    @Html.Label("StreetNumber", "Street and Number:")
    <br />
    @Html.Editor("StreetNumber", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.StreetNumber, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}